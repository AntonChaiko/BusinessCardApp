<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/row_layout"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/person_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/full_name_adapter_text_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="random name"
        app:layout_constraintStart_toEndOf="@+id/person_image_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/phone_adapter_text_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="123123123123"
        app:layout_constraintStart_toEndOf="@+id/person_image_view"
        app:layout_constraintTop_toBottomOf="@+id/full_name_adapter_text_field" />

    <TextView
        android:id="@+id/email_adapter_text_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="asdjasdhsal@mail.ru"
        app:layout_constraintStart_toEndOf="@+id/person_image_view"
        app:layout_constraintTop_toBottomOf="@+id/phone_adapter_text_field" />
</androidx.constraintlayout.widget.ConstraintLayout>